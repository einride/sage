{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions",
        "dockerfile",
        "npm",
        "pip_requirements"
      ],
      "enabled": false
    },
    {
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false,
      "description": "Disable major and minor Go version bumps in go.mod (follow N-1 policy manually)"
    },
    {
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "matchDepTypes": ["golang"],
      "rangeStrategy": "bump",
      "description": "The 'bump' strategy enables patch updates to be proposed (without it, 'go 1.25' would not update to 'go 1.25.1')"
    },
    {
      "matchDepNames": ["golang-patches-only"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false,
      "description": "Disable major and minor Go version bumps for version consts (follow N-1 policy manually)"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/\\.go$/"],
      "matchStrings": [
        "//\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)\\n\\s*(?:const\\s+)?[a-zA-Z_][a-zA-Z0-9_]*\\s*(?:=|:=)\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ]
    }
  ]
}
