{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions",
        "gomod",
        "dockerfile",
        "npm",
        "pip_requirements"
      ],
      "enabled": false
    },
    {
      "matchDepNames": ["biomejs/biome"],
      "extractVersion": "^cli/v(?<version>.*)$"
    },
    {
      "matchDepNames": ["grpc/grpc-go"],
      "extractVersion": "^cmd/protoc-gen-go-grpc/v(?<version>.*)$"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/\\.go$/"],
      "matchStrings": [
        "//\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s+depName=(?<depName>[^\\s]+)\\n\\s*(?:const\\s+)?\\w*[vV]ersion\\w*\\s*(?:=|:=)\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
      ]
    }
  ]
}
